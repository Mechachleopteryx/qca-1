{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-unreachable": "off"
    },
    "globals": {
        "THREE": true,
        "AssetManager": true,
        "AchievementManager": true,
        "iziToast": true,
        "AppControllerInstance": true,
        "ThreeViewControllerInstance": true,
        "QubitEditorInstance": true,
        "ToolboxControllerInstance": true,
        "GUIinstance": true
    }
}